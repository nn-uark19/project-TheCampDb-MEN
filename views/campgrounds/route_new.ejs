<%include ../partials/header.ejs%>

<%# content %>
<h1 class="text-center">Create a New Campground</h1>
<div id="form" style="width:60%; margin: 25px auto">
  <form action='/campgrounds' method='POST' class="form-horizontal">
    <div class="form-group">
      <label for="name" class="col-sm-3 control-label">Campground Name </label>
      <div class="col-sm-9">
        <input id="name" name='newCamp[name]' type="text" class="form-control" placeholder='name of camp'>
      </div>
    </div>
    <div class="form-group">
      <label for="url" class="col-sm-3 control-label">Image url</label>
      <div class="col-sm-9">
        <input id="url" name='newCamp[image]' type="text" class="form-control" placeholder='url image of the camp'>
      </div>
    </div>
    <div class="form-group">
      <label for="price" class="col-sm-3 control-label">Price</label>
      <div class="col-sm-9">
        <input id="price" name='newCamp[price]' type="number" class="form-control" placeholder='price of the camp' min="0.01" step=0.01>
      </div>
    </div>
    <div class="form-group">
      <label for="location" class="control-label col-sm-3">Location</label>
      <div class="col-sm-9">
        <input id="location" name='newCamp[location]' 
          type="text" class="form-control" 
          placeholder='location of campground'>
      </div>
    </div>
    <div class="form-group">
      <label>Campground Description</label>
      <textarea name='newCamp[description]' rows="10" class="form-control" placeholder='description of the camp'></textarea> 
    </div>

    <button class="btn btn-primary btn-block btn-lg">Submit</button>
  </form>
</div>
<p class="text-center"><a href="/campgrounds">Go Back</a></p>

<%include ../partials/footer.ejs%>