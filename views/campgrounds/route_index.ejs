<% include ../partials/header.ejs%>

<%# main content %>
<div class="container">
  <div class="jumbotron">
    <h1>Welcome To YelpCamp!</h1>
    <p>View our hand-picked campgrounds from all over the world</p>
    <p><a class="btn btn-primary btn-lg" href="/campgrounds/new"">Add New Campgrounds</a></p>
  </div>
</div>

<div class='container'>
  <div class="row text-center">
    <% campgrounds.forEach(function(camp) { %>
      <div class="col-md-3 col-sm-6">
        <div class="thumbnail">
          <img src='<%= camp.image %>'>
          <div class="caption">
            <h4><%= camp.name %></h4>
            <a href='/campgrounds/<%=camp._id%>' type="button" class="btn btn-primary">More Info</a>
          </div>  
        </div> 
      </div> 
    <%})%>
  </div>
</div>


