<%include ../partials/header.ejs%>

<%# content %>
<h1 class="text-center">Edit <%=camp.name%></h1>
<div id="form" style="width:60%; margin: 25px auto">
  <form action='/campgrounds/<%=camp._id%>?_method=PUT' method='POST' class="form-horizontal">
    <div class="form-group">
      <label for="name" class="col-sm-3 control-label">Campground Name </label>
      <div class="col-sm-9">
        <input id="name" name='newCamp[name]' type="text" class="form-control" value='<%=camp.name%>'>
      </div>
    </div>
    <div class="form-group">
      <label for="url" class="col-sm-3 control-label">Image url</label>
      <div class="col-sm-9">
        <input id="url" name='newCamp[image]' type="text" class="form-control" value='<%=camp.image%>'>
      </div>
    </div>
    <div class="form-group">
      <label for="price" class="col-sm-3 control-label">Price</label>
      <div class="col-sm-9">
        <input id="price" name='newCamp[price]' type="number" class="form-control" value='<%=camp.price%>' min="0.01" step=0.01>
      </div>
    </div>
    <div class="form-group">
      <label for="location" class="control-label col-sm-3">Location</label>
      <div class="col-sm-9">
        <input id="location" name='newCamp[location]' 
          type="text" class="form-control" value='<%=camp.location%>'>
      </div>
    </div>
    <div class="form-group">
      <label>Campground Description</label>
      <textarea name='newCamp[description]' rows="10" class="form-control"><%=camp.description%></textarea> 
    </div>
    <button class="btn btn-primary btn-block btn-lg">Submit</button>
  </form>
</div>
<p class="text-center"><a href="/campgrounds/<%=camp._id%>">Go Back</a></p>

<%include ../partials/footer.ejs%>