<%include ../partials/header.ejs%>

<%# content %>
<h1 class="text-center">Edit <%=camp.name%></h1>
<div id="form" style="width:30%; margin: 25px auto">
  <form action='/campgrounds/<%=camp._id%>?_method=PUT' method='POST'>
    <div class="form-group">
      <input name='newCamp[name]' class="form-control" value='<%=camp.name%>'>
    </div>
    <div class="form-group">
      <input name='newCamp[image]' class="form-control" value='<%=camp.image%>'>
    </div> 
    <div class="form-group">
      <input name='newCamp[price]' type="number" min="0.01" step="0.01" class="form-control" value='<%=camp.price%>'>
    </div> 
    <div class="form-group">
      <textarea name='newCamp[description]' rows="10" class="form-control"><%=camp.description%></textarea>
    </div>
    <button class="btn btn-primary btn-block btn-lg">Submit</button>
  </form>
</div>
<p class="text-center"><a href="/campgrounds/<%=camp._id%>">Go Back</a></p>

<%include ../partials/footer.ejs%>