<% include ../partials/header%>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <p class="lead">Yelp Camp</p>
      <ul class="list-group">
        <a href="#" class="list-group-item active">Category 1</a>
        <a href="#" class="list-group-item">Category 2</a>
        <a href="#" class="list-group-item">Category 3</a>
      </ul>
    </div>
    <div class="col-md-9">
      <div class="thumbnail">
        <h1> <%= camp.name %> </h1>
        <img class="image-responsive" src='<%= camp.image%>'>
        <div class="caption">
          <h4 class="pull-right">$9.00/night</h4>
          <h4><%= camp.name %></h4>
          <p><em>Submitted by <%= camp.author.username%></em></p>
          <p><%= camp.description %></p>
        </div>
      </div>
      <div class="well">
        <div id="add-comment-button" class="text-right">
          <a class="btn btn-primary" href="/campgrounds/<%=camp._id%>/comments/new" >Add new Comment</a>
        </div>
        <hr>
        <div id="comment-section">
          <% camp.comments.forEach(function(comment){ %>
            <span class="pull-right">10 days ago</span>
            <strong><%= comment.author.username%></strong>           
            <p><%= comment.text%></p>
          <% })%>
        </div>
      </div>
    </div>

  </div>
</div>






<a href='/campgrounds'>Go Back</a>

<% include ../partials/footer%>